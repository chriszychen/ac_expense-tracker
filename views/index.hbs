<div class="container index-container mt-3">
  <div class="row">
    <div class="col-8">
      <div class="row">
        <div class="col-4 mr-auto">
          <p class="mt-3 ml-2 font-weight-bold total-amount-text">總金額：</h3>
        </div>
        <div class="col-auto">
          <p class="total-amount-number">{{ totalAmount }}</p>
        </div>
      </div>
    </div>
  </div>
  <ul class="list-group">
    {{#each records}}
    <div class="row">
      <div class="col-8">
        <li class="list-group-item">
          <div class="row">
            <div class="col-2 d-flex justify-content-center align-items-center category-icon"><i
                class="{{ this.iconClass }}"></i>
            </div>
            <div class="col-auto mr-auto">
              <p class="my-3 font-weight-bold record-name">{{ this.name }}</p>
              <p class="my-3 font-weight-bold record-date">{{ this.date }}</p>
            </div>
            <div class="col-auto d-flex align-items-center">
              <p class="font-weight-bold record-amount">$ {{ this.amount }}</p>
            </div>
          </div>

        </li>

      </div>
      <div class="col-4 d-flex align-items-center">

        <a href="/records/{{ this._id }}/edit" class="btn btn-success mr-3">修改</a>
        <form action="/records/{{ this._id }}?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-danger">刪除</button>
        </form>


      </div>
    </div>
    {{/each}}
  </ul>
  <div class="row">
    <div class="col-8 text-center mt-3 mb-5">
      <a href="/records/new" class="btn btn-warning btn-lg">新增支出</a>
    </div>
  </div>
</div>



