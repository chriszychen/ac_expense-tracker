<div class="container index-container my-3">
  <div class="row">
    <div class="col-8">
      <div class="row">
        <div class="col-12">
          <form class="d-flex" name="filter-form" action="/records/filter" method="GET">
            <div class="container-fluid form-group filter-dropdown">
              <select name="filter" class="form-control" id='inputType' onchange="submit()"
                style="cursor: pointer; max-width: 80%;">
                <option value="" selected hidden>類別</option>
                <option value="housewares" {{#if (eq categoryFilter 'housewares' )}} selected {{/if}}>家居物業</option>
                <option value="transportation" {{#if (eq categoryFilter 'transportation' )}} selected {{/if}}>交通出行
                </option>
                <option value="entertainment" {{#if (eq categoryFilter 'entertainment' )}} selected {{/if}}>休閒娛樂
                </option>
                <option value="consumption" {{#if (eq categoryFilter 'consumption' )}} selected {{/if}}>餐飲食品</option>
                <option value="others" {{#if (eq categoryFilter 'others' )}} selected {{/if}}>其他</option>
              </select>
            </div>
          </form>
        </div>
      </div>
      <div class="row">
        <div class="col-4 mr-auto">
          <p class="mt-3 ml-2 font-weight-bold total-amount-text">總金額：</h3>
        </div>
        <div class="col-auto">
          <p class="total-amount-number">{{ totalAmount }}</p>
        </div>
      </div>
    </div>
    <div class="col-4">
      <a href="/records/new" class="btn btn-warning btn-lg ml-3">新增支出</a>
    </div>
  </div>
  <ul class="list-group">
    {{#each records}}
    <div class="row">
      <div class="col-8">
        <li class="list-group-item">
          <div class="row">
            <div class="col-2 d-flex justify-content-center align-items-center category-icon"><i
                class="{{ this.iconClass }}"></i>
            </div>
            <div class="col-auto mr-auto">
              <p class="my-3 font-weight-bold record-name">{{ this.name }}</p>
              <p class="my-3 font-weight-bold record-date">{{ this.date }}</p>
            </div>
            <div class="col-auto d-flex align-items-center">
              <p class="font-weight-bold record-amount">$ {{ this.amount }}</p>
            </div>
          </div>
        </li>
      </div>
      <div class="col-4 d-flex align-items-center">
        <a href="/records/{{ this._id }}/edit" class="btn btn-success mr-3">修改</a>
        <form action="/records/{{ this._id }}?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-danger">刪除</button>
        </form>
      </div>
    </div>
    {{/each}}
  </ul>
</div>