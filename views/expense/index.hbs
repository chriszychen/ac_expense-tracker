<div class="container index-container my-3 pt-2">
  <div class="row d-flex justify-content-center">

    <div class="col-10">
      <div class="row">
        <div class="mx-auto">
          <a href="/expense/records/new" class="btn btn-outline-info ml-3 mb-4">新增支出</a>
        </div>
      </div>
      <form name="filter-form" action="/expense/records/filter" method="GET" id="filter-form">
        <div class="row mb-3">
          <div class="col-8 mx-auto d-flex justify-content-around date-filter">
            <div class="text-center pt-1 pl-3">從</div>
            <div class="px-0">
              <div class="container-fluid form-group mb-0">
                <input type="date" name="startDate" value="{{ startDate }}" id="start-date-input">
              </div>
            </div>
            <div class="text-center pt-1">到</div>
            <div class="px-0">
              <div class="container-fluid form-group mb-0">
                <input type="date" name="endDate" value="{{ endDate }}" id="end-date-input">
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-8 mx-auto">
            <div class="container-fluid form-group filter-dropdown">
              <select name="category" class="form-control mx-auto" id='category-filter' onchange="submit()"
                style="cursor: pointer;">
                <option value="">全部分類</option>
                <option value="housewares" {{#if (eq categoryFilter 'housewares' )}} selected {{/if}}>家居物業</option>
                <option value="transportation" {{#if (eq categoryFilter 'transportation' )}} selected {{/if}}>交通出行
                </option>
                <option value="entertainment" {{#if (eq categoryFilter 'entertainment' )}} selected {{/if}}>休閒娛樂
                </option>
                <option value="consumption" {{#if (eq categoryFilter 'consumption' )}} selected {{/if}}>餐飲食品</option>
                <option value="others" {{#if (eq categoryFilter 'others' )}} selected {{/if}}>其他</option>
              </select>
            </div>
          </div>
        </div>
      </form>
      <div class="row">
        <div class="col-4 mr-auto">
          <p class="mt-3 ml-5 font-weight-bold total-amount-text">總金額：</h3>
        </div>
        <div class="col-auto">
          <p class="total-amount-expense">{{ totalAmount }}</p>
        </div>
      </div>
    </div>
  </div>
  <ul class="list-group" id="record-panel">
    {{#each records}}
    <div class="row d-flex justify-content-center">
      <div class="col-10">
        <li class="list-group-item">
          <div class="row">
            <div class="col-2 d-flex justify-content-center align-items-center category-icon"><i
                class="{{ this.iconClass }}"></i>
            </div>
            <div class="col-auto mr-auto">
              <p class="my-3 font-weight-bold record-name">{{ this.name }}</p>
              <p class="my-3 font-weight-bold record-date">{{ this.date }}</p>
              <i class="fas fa-store place-icon"></i>
              <p class="my-3 font-weight-bold d-inline record-place"> {{ this.place }}</p>
            </div>
            <div class="col-auto d-flex align-items-center">
              <p class="font-weight-bold record-amount">$ {{ this.amount }}</p>
            </div>
            <div class="col-auto d-flex flex-column justify-content-around">
              <a href="/expense/records/{{ this._id }}/edit" class="btn btn-success icon-button"><i
                  class="fas fa-edit fa-lg"></i></a>
              <button type="button" class="btn btn-danger icon-button delete-button" data-toggle="modal"
                data-target="#recordModal" data-name="{{ this.name }}" data-id="{{ this._id }}"><i
                  class="fas fa-trash-alt fa-lg"></i></button>
            </div>
          </div>
        </li>
      </div>
    </div>
    {{/each}}
  </ul>
</div>
<!-- Modal -->
<div class="modal fade" id="recordModal" tabindex="-1" role="dialog" aria-labelledby="recordModal" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modal-title">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        確定要刪除此筆支出紀錄？
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
        <form action="/expense/records/:id?_method=DELETE" method="POST" style="display: inline;" id="confirm-form">
          <button type="submit" class="btn btn-primary">確定</button>
        </form>
      </div>
    </div>
  </div>
</div>